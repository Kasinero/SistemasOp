#include <iostream>
#include <thread>
#include <mutex>

std::mutex mtx;
int shared_variable = 0;

void process(int id) {
    mtx.lock();
    std::cout << "Processo " << id << " acessando recurso compartilhado." << std::endl;
    shared_variable++;
    std::cout << "Valor atual da variÃ¡vel compartilhada: " << shared_variable << std::endl;
    mtx.unlock();
}

int main() {
    std::thread t1(process, 1);
    std::thread t2(process, 2);

    t1.join();
    t2.join();

    return 0;
}
